<body>
    <h1>List of Providers</h1>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialty</th>
            </tr>
        </thead>
        <tbody>
            <% providers.forEach(function(provider) { %>
                <tr>
                    <td><%= provider.first_name %></td>
                    <td><%= provider.last_name %></td>
                    <td><%= provider.provider_specialty %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h1>List of Patients</h1>
    <table>
        <thead>
            <tr>
                <th>Patient ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date Of Birth</th>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach(function(row) { %>
                <tr>
                    <td><%= row.patient_id %></td>
                    <td><%= row.first_name %></td>
                    <td><%= row.last_name %></td>
                    <td><%= row.date_of_birth %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>

